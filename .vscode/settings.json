{
    "files.exclude" : {
        // Sub Sections
        "_plotters" : false,   // Plotting Tools
        "_tools"    : false,   // Post-plotting Tools

        // Excess
        "_plugins"          : true,
        ".bundle"           : true,
        ".jekyll-cache"     : true,
        "node_modules"      : true,
        "scripts"           : true,
        "LICENSE.md"        : true,
        "Gemfile.lock"      : true,
        "package-lock.json" : true
    },
    "yaml.schemas": {
        "./.vscode/config-schema.json": ["_config.yml"]
    },
    "files.associations": {
        "*.html": "liquid"
    }
}