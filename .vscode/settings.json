{
    "files.exclude" : {
        // Sub Sections
        "_audio"  : true,   // Audio Visualizer
        "_code"   : true,   // Code
        "_forms"  : true,   // Google Forms
        "_maths"  : true,   // Maths
        "_serial" : true,   // Serial Plotter
        "_table"  : true,   // HandsOnTable
        "_tools"  : true,   // Post-plotting Tools

        // Excess
        "_plugins"          : true,
        ".bundle"           : true,
        ".jekyll-cache"     : true,
        "node_modules"      : true,
        "scripts"           : true,
        "LICENSE.md"        : true,
        "Gemfile.lock"      : true,
        "package-lock.json" : true
    },
    "yaml.schemas": {
        "./.vscode/config-schema.json": ["_config.yml"]
    },
    "files.associations": {
        "*.html": "liquid"
    }
}